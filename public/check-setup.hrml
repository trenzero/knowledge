<!DOCTYPE html>
<html>
<head>
    <title>系统配置检查</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        :root {
            --bg-primary: #1a1a1a;
            --bg-secondary: #2d2d2d;
            --text-primary: #ffffff;
            --text-secondary: #b0b0b0;
            --accent-color: #4f46e5;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --error-color: #ef4444;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: var(--bg-primary);
            color: var(--text-primary);
            line-height: 1.6;
            padding: 2rem;
            min-height: 100vh;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
        }
        
        h1 {
            margin-bottom: 2rem;
            text-align: center;
        }
        
        .test-section {
            background: var(--bg-secondary);
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border: 1px solid #404040;
        }
        
        .test-section h2 {
            margin-bottom: 1rem;
            color: var(--text-secondary);
            font-size: 1.25rem;
        }
        
        .test-result {
            padding: 1rem;
            border-radius: 0.375rem;
            margin-bottom: 1rem;
        }
        
        .success {
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid var(--success-color);
            color: var(--success-color);
        }
        
        .error {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid var(--error-color);
            color: var(--error-color);
        }
        
        .warning {
            background: rgba(245, 158, 11, 0.1);
            border: 1px solid var(--warning-color);
            color: var(--warning-color);
        }
        
        button {
            background: var(--accent-color);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            cursor: pointer;
            font-weight: 500;
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
        }
        
        button:hover {
            opacity: 0.9;
        }
        
        button.secondary {
            background: var(--bg-secondary);
            color: var(--text-primary);
            border: 1px solid #404040;
        }
        
        pre {
            background: #2d2d2d;
            padding: 1rem;
            border-radius: 0.5rem;
            overflow: auto;
            margin-top: 1rem;
            font-size: 0.875rem;
        }
        
        .loading {
            opacity: 0.6;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .spinner {
            display: inline-block;
            width: 1rem;
            height: 1rem;
            border: 2px solid transparent;
            border-top: 2px solid currentColor;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>系统配置检查</h1>
        
        <div class="test-section">
            <h2>环境变量检查</h2>
            <button onclick="checkEnvironment()">检查环境变量</button>
            <div id="envResults"></div>
        </div>
        
        <div class="test-section">
            <h2>KV命名空间检查</h2>
            <button onclick="checkKV()">检查KV存储</button>
            <div id="kvResults"></div>
        </div>
        
        <div class="test-section">
            <h2>D1数据库检查</h2>
            <button onclick="checkDatabase()">检查数据库</button>
            <div id="dbResults"></div>
        </div>
        
        <div class="test-section">
            <h2>静态资源检查</h2>
            <button onclick="checkStaticResources()">检查静态文件</button>
            <div id="staticResults"></div>
        </div>
        
        <div class="test-section">
            <h2>API端点检查</h2>
            <button onclick="checkAllAPIs()">检查所有API</button>
            <div id="apiResults"></div>
        </div>
        
        <div class="test-section">
            <h2>工具</h2>
            <button onclick="clearSessions()" class="secondary">清除所有会话</button>
            <button onclick="testLogin()" class="secondary">测试登录</button>
            <button onclick="location.href='/'" class="secondary">返回首页</button>
        </div>
    </div>

    <script>
        async function checkEnvironment() {
            const results = document.getElementById('envResults');
            results.innerHTML = '<div class="test-result loading"><span class="spinner"></span>检查环境变量...</div>';
            
            try {
                // 尝试访问需要环境变量的功能
                const response = await fetch('/api/categories');
                const data = await response.json();
                
                if (response.status === 401) {
                    results.innerHTML = '<div class="test-result success">✅ 环境变量正常（需要登录）</div>';
                } else if (response.ok) {
                    results.innerHTML = '<div class="test-result success">✅ 环境变量正常</div>';
                } else {
                    throw new Error(`HTTP ${response.status}`);
                }
            } catch (error) {
                results.innerHTML = `<div class="test-result error">❌ 环境变量检查失败: ${error.message}</div>`;
            }
        }
        
        async function checkKV() {
            const results = document.getElementById('kvResults');
            results.innerHTML = '<div class="test-result loading"><span class="spinner"></span>检查KV存储...</div>';
            
            try {
                // 尝试设置和读取KV值
                const testKey = 'test-key-' + Date.now();
                const testValue = 'test-value';
                
                // 由于我们不能直接访问KV，我们通过尝试登录来测试
                const formData = new FormData();
                formData.append('password', 'test-password');
                
                const response = await fetch('/login', {
                    method: 'POST',
                    body: formData
                });
                
                // 我们期望登录失败（因为密码错误），但至少证明KV操作正常
                if (response.status === 200 || response.status === 302) {
                    results.innerHTML = '<div class="test-result success">✅ KV存储正常</div>';
                } else {
                    throw new Error(`HTTP ${response.status}`);
                }
            } catch (error) {
                results.innerHTML = `<div class="test-result error">❌ KV存储检查失败: ${error.message}</div>`;
            }
        }
        
        async function checkDatabase() {
            const results = document.getElementById('dbResults');
            results.innerHTML = '<div class="test-result loading"><span class="spinner"></span>检查数据库...</div>';
            
            try {
                const response = await fetch('/api/categories');
                const data = await response.json();
                
                if (response.ok) {
                    results.innerHTML = `<div class="test-result success">✅ 数据库连接正常</div>`;
                } else if (response.status === 401) {
                    results.innerHTML = `<div class="test-result warning">⚠️ 数据库可能需要登录访问</div>`;
                } else {
                    throw new Error(`HTTP ${response.status}: ${data.error || 'Unknown error'}`);
                }
            } catch (error) {
                results.innerHTML = `<div class="test-result error">❌ 数据库检查失败: ${error.message}</div>`;
            }
        }
        
        async function checkStaticResources() {
            const results = document.getElementById('staticResults');
            results.innerHTML = '<div class="test-result loading"><span class="spinner"></span>检查静态资源...</div>';
            
            const resources = [
                '/style.css',
                '/app.js',
                '/sw.js',
                '/manifest.json'
            ];
            
            let allOk = true;
            let html = '';
            
            for (const resource of resources) {
                try {
                    const response = await fetch(resource);
                    if (response.ok) {
                        html += `<div class="test-result success">✅ ${resource} - 可访问</div>`;
                    } else {
                        html += `<div class="test-result error">❌ ${resource} - HTTP ${response.status}</div>`;
                        allOk = false;
                    }
                } catch (error) {
                    html += `<div class="test-result error">❌ ${resource} - ${error.message}</div>`;
                    allOk = false;
                }
            }
            
            results.innerHTML = html;
            
            if (allOk) {
                results.innerHTML += '<div class="test-result success">✅ 所有静态资源正常</div>';
            } else {
                results.innerHTML += '<div class="test-result error">❌ 部分静态资源不可访问</div>';
            }
        }
        
        async function checkAllAPIs() {
            const results = document.getElementById('apiResults');
            results.innerHTML = '<div class="test-result loading"><span class="spinner"></span>检查API端点...</div>';
            
            const endpoints = [
                '/api/categories',
                '/api/tags',
                '/api/articles',
                '/api/export'
            ];
            
            let html = '';
            
            for (const endpoint of endpoints) {
                try {
                    const response = await fetch(endpoint);
                    const data = await response.json();
                    
                    if (response.ok) {
                        html += `<div class="test-result success">✅ ${endpoint} - 正常</div>`;
                    } else if (response.status === 401) {
                        html += `<div class="test-result warning">⚠️ ${endpoint} - 需要登录</div>`;
                    } else {
                        html += `<div class="test-result error">❌ ${endpoint} - HTTP ${response.status}</div>`;
                    }
                } catch (error) {
                    html += `<div class="test-result error">❌ ${endpoint} - ${error.message}</div>`;
                }
            }
            
            results.innerHTML = html;
        }
        
        async function clearSessions() {
            if (!confirm('确定要清除所有会话吗？这将使所有用户需要重新登录。')) {
                return;
            }
            
            try {
                // 这里需要一个清除会话的API端点
                // 暂时使用重定向到首页的方式
                alert('会话清除功能需要后端API支持。请手动在Cloudflare Dashboard中清除KV命名空间。');
            } catch (error) {
                alert('清除失败: ' + error.message);
            }
        }
        
        async function testLogin() {
            const password = prompt('请输入密码进行测试:');
            if (!password) return;
            
            try {
                const formData = new FormData();
                formData.append('password', password);
                
                const response = await fetch('/login', {
                    method: 'POST',
                    body: formData
                });
                
                if (response.ok || response.status === 302) {
                    alert('✅ 登录测试成功！');
                } else {
                    alert('❌ 登录测试失败，请检查密码');
                }
            } catch (error) {
                alert('❌ 登录测试失败: ' + error.message);
            }
        }
        
        // 页面加载时自动运行基本检查
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                checkStaticResources();
                checkAllAPIs();
            }, 1000);
        });
    </script>
</body>
</html>